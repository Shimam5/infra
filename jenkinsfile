pipeline {
   agent any
   
    stages{
        stage('Git '){
            steps{
                git branch: 'main', url: 'https://github.com/Shimam5/infra.git'
               
            }
        }
        stage('Terraform init'){
            steps{
                sh 'terraform init'
            
            }
        }
        stage('Terraform Plan'){
            steps{
                sh 'terraform plan'
            }
        }
        stage('Terraform apply'){
            steps{
                sh 'terraform apply --auto-approve'
                
            }
        }
    }
   
}
